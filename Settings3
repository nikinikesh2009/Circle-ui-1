  <script>
        const defaultConfig = {
            main_title: "Your space, your rules.",
            main_subtitle: "Tweak how Circle feels ‚Äî from privacy to notifications.",
            tagline: "Make it your world, your way.",
            bottom_message: "Circle grows with you.\nThe more you shape your settings, the more it feels like home."
        };

        function toggleSwitch(element) {
            element.classList.toggle('active');
        }

        function scrollToSection(sectionId) {
            // Update active nav item
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
            });
            event.target.closest('.nav-item').classList.add('active');
            
            // Scroll to section
            document.getElementById(sectionId).scrollIntoView({
                behavior: 'smooth',
                block: 'start'
            });
        }

        async function onConfigChange(config) {
            const titleElement = document.getElementById('main-title');
            const subtitleElement = document.getElementById('main-subtitle');
            const taglineElement = document.getElementById('tagline');
            const bottomMessageElement = document.getElementById('bottom-message');

            if (titleElement) {
                titleElement.textContent = config.main_title || defaultConfig.main_title;
            }
            if (subtitleElement) {
                subtitleElement.textContent = config.main_subtitle || defaultConfig.main_subtitle;
            }
            if (taglineElement) {
                taglineElement.textContent = config.tagline || defaultConfig.tagline;
            }
            if (bottomMessageElement) {
                const message = config.bottom_message || defaultConfig.bottom_message;
                bottomMessageElement.innerHTML = message.replace(/\n/g, '<br>');
            }
        }

        function mapToCapabilities(config) {
            return {
                recolorables: [],
                borderables: [],
                fontEditable: undefined,
                fontSizeable: undefined
            };
        }

        function mapToEditPanelValues(config) {
            return new Map([
                ["main_title", config.main_title || defaultConfig.main_title],
                ["main_subtitle", config.main_subtitle || defaultConfig.main_subtitle],
                ["tagline", config.tagline || defaultConfig.tagline],
                ["bottom_message", config.bottom_message || defaultConfig.bottom_message]
            ]);
        }

        // Initialize SDK
        if (window.elementSdk) {
            window.elementSdk.init({
                defaultConfig,
                onConfigChange,
                mapToCapabilities,
                mapToEditPanelValues
            });
        }
    </script>
